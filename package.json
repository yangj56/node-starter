{
  "name": "node-program",
  "version": "1.0.0",
  "description": "Node.js application with TypeScript",
  "main": "dist/index.min.js",
  "scripts": {
    "start": "node dist/index.min.js",
    "dev": "tsx watch src/index.ts",
    "dev:run": "tsx src/index.ts",
    "build": "tsc && npm run minify",
    "minify": "terser dist/index.js -o dist/index.min.js -c -m",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "terser": "^5.39.0",
    "ts-jest": "^29.3.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
