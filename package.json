{
  "name": "node-program",
  "version": "1.0.0",
  "description": "Node.js application with TypeScript",
  "main": "dist/index.min.js",
  "scripts": {
    "start": "node dist/index.min.js",
    "dev": "tsx watch src/index.ts",
    "dev:run": "tsx src/index.ts",
    "build": "tsc && npm run minify",
    "minify": "terser dist/index.js -o dist/index.min.js -c -m",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "terser": "^5.28.1",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
